<?xml version="1.0"?>
<launch>
    <arg name="rviz_path" default="$(find raycast_mapping_ros)/launch/rviz.rviz"/>

    <include file="$(find raycast_mapping_ros)/launch/raycast_mapping.launch">
        <arg name="cloud_topic" value="/pc_from_scan"/>
    </include>

    <include file="$(find turtlebot3_gazebo)/launch/turtlebot3_world.launch"/>
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(arg rviz_path)"/>
    <node pkg="scan_to_pcl_ros" type="scan_to_pcl" name="scan_to_pcl" output="screen"/>
    <node pkg="tf2_ros" type="static_transform_publisher" name="tf_from_base_scan_to_base_link" args="0 0 0 0 0 0 /base_link /base_scan"/>
</launch>
